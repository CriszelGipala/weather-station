<form action="/dashboard/addstation" method="POST">
  <div class="field"><label class="label">Name</label>
    <input class="input" name="title" placeholder="Name" required>
  </div>
  <div class="columns">
    <div class="column">
      <label class="label">Latitude</label>
      <input class="input" type="number" step="0.0001" name="lat" placeholder="00.00" required>
    </div>
    <div class="column">
      <label class="label">Longitude</label>
      <input class="input" type="number" step="0.0001" name="lng" placeholder="00.00" required>
    </div>
  </div>
  <button class="button is-link">Add Station</button>
</form>
